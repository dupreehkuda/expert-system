@tailwind base;
@tailwind components;
@tailwind utilities;

.btn {
  padding: 8px 24px;
  font-size: 1.2rem;
  background-color: #8FB3FF;
  color: #fff;
  border: none;
  border-radius: 999px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn:hover {
  background-color: #5D88E6;
}

.header {
  background-color: #202020;
  padding: 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.header h2 {
  font-size: 2rem;
  color: #fff;
}